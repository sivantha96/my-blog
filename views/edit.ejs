<%- include('partials/header') %>
 
 <div class="ui main container segment">
     <h1 class="ui header">Edit blog post</h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Topic</label>
            <input type="text" name=blog[title] value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name=blog[image] value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea type="text" name=blog[body]><%= blog.body %></textarea>
        </div>
        <div>
            <input class="ui button" type="submit">
        </div>
    </form>
 </div>

 <%- include('partials/footer') %>